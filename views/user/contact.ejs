<%- include('../partial/head') %>

    <%- include('../partial/sidebar') %>

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <!-- row -->
            <div class="container-fluid">
                <div class="page-titles">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active"><a href="/admin/role-player">Role Player</a></li>
                    </ol>

                    <h5><a href="#" data-toggle="modal" data-target="#createRp" class="btn btn-primary mt-5"><i
                                class="fa fa-pencil"></i>Add Contact</a></h5>
                </div>




                <div class="row">
                    <div class="col-lg-12">
                        <div class="modal fade" id="createRp">
                            <div class="modal-dialog modal-dialog-centered" role="document">

                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">
                                            Add Contact
                                        </h5>
                                        <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                                        </button>
                                    </div>

                                    <div class="modal-body">
                                        <form action="" method="post">
                                            <div class="form-group col-lg-6 col-md-12">
                                                <div class="col-lg-6 col-md-9">
                                                    <div class="text-center"><h3>Scanner</h3></div>
                                                    <div class="" style="width:300px;" id="reader"></div>
                                                    
                                                    <div class="" style="padding:30px;"></div>
                                                    
                                                </div>
                                                <div class="col-lg-12 col-md-8">
                                                    <h4>SCAN RESULT</h4>
                                                    <div id="result">Here...</div>
                                                </div>
                                                <div class="text-center">
                                                    <button type="submit" class="btn btn-primary mt-3">Save Contact</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                </div>

                            </div>

                        </div>
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Contacts</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-responsive-md">
                                        
                                        <thead>
                                                <tr>
                                                    <th class="width50">
                                                        <div class="custom-control custom-checkbox checkbox-success check-lg mr-3">
                                                            <input type="checkbox" class="custom-control-input" id="checkAll" required="">
                                                            <label class="custom-control-label" for="checkAll"></label>
                                                        </div>
                                                    </th>
                                                    <th>S/N</th>
                                                    <th>First Name</th>
                                                    <th>Last Name</th>
                                                    <th>Email</th>
                                                    <th>Phone Number</th>
                                                    <th>Institution</th>
                                                    <th>Manage</th>
                                                </tr>
                                        </thead>
                                        <% for (let contact of contacts){%>
                                            <tbody>
                                                
                                                    <tr>
                                                        <td>
                                                            <div class="custom-control custom-checkbox checkbox-success check-lg mr-3">
                                                                <input type="checkbox" class="custom-control-input" id="customCheckBox3" required="">
                                                                <label class="custom-control-label" for="customCheckBox3"></label>
                                                            </div>
                                                        </td>
                                                        <% let arr = Object.values(contacts)%>
													    <td><strong><%=arr.indexOf(contact) + 1 %></strong></td>
                                                        <td>
                                                            <%= contact.fName %>
                                                        </td>
                                                        <td>
                                                            <%= contact.lName %>
                                                        </td>
                                                        <td>
                                                            <%= contact.email %>
                                                        </td>
                                                        <td>
                                                            <%= contact.phoneNumber %>
                                                        </td>
                                                        <td><%= contact.institution %> </td>
                                                        <td>
                                                            <div class="d-flex">
                                                                <a href="callto:<%= contact.phoneNumber %> " class="btn btn-primary shadow btn-xs sharp mr-1"><i
                                                                        class="fa fa-phone"></i></a>
                                                                <a href= "mailto:<%= contact.email %>" class="btn btn-primary shadow btn-xs sharp mr-1" ><i
                                                                        class="fa fa-envelope"></i></a>
                                                                <a href="#" class="btn btn-danger shadow btn-xs sharp mr-1" data-toggle="modal" data-target="#delete"><i
                                                                    class="fa fa-trash"></i></a>
                                                                
                                                                

                                                                <!-- Button trigger modal -->



                                                                <div class="modal fade" id="delete">
                                                                    <div class="modal-dialog modal-dialog-centered" role="document">

                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <h2 class="modal-title">
                                                                                    Are you sure you want to delete <em> <%=contact.fName%> <%= contact.lName %>  ?</em>
                                                                                </h2>
                                                                                <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                                                                                </button>
                                                                            </div>

                                                                            <div class="modal-body">
                                                                                <form action="/admin/role-player/<%= contact._id %>?_method=DELETE" method="post">
                                                                                    <div class="text-right">
                                                                                        <button type="submit" class="btn btn-danger light" data-dismiss="modal">Close</button>
                                                                                        <button type="submit" class="btn btn-primary">Yes</button>
                                                                                    </div>
                                                                                </form>
                                                                            </div>

                                                                        </div>

                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                            </tbody>
                                        <% } %>

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->
        <%- include('../partial/footer') %>