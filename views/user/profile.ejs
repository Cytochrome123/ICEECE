<%- include('../partial/head') %>
    <%- include('../partial/sidebar') %>



        <!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">
            <div class="container-fluid">
                <div class="page-titles">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
						<li class="breadcrumb-item active"><a href="javascript:void(0)">Sessions</a></li>
					</ol>
                </div>


                <% if (typeof isVerified != "undefined") { %>
                    <% if (! isVerified) { %>
                        <div class="alert alert-danger alert-dismissable fade show" role="alert">
                            <strong>Error</strong>
                            Your account is not yet verified <a href="/user/send-verification-email">Resend verification email</a>
                            <button type="button" class="button-close" data-bs-dismiss="alert" aria-label="close"></button>
                        </div>
                    <% } %>
                <% } %>
                <% if (typeof emailSent != "undefined") { %>
                    <% if (emailSent) { %>
                        <div class="alert alert-success alert-dismissable fade show" role="alert">
                            <strong>Success</strong>
                            Verification email sent successfully!!!
                            <button type="button" class="button-close" data-bs-dismiss="alert" aria-label="close"></button>
                        </div>
                    <% } %>
                <% } %>
                <% if (typeof err != "undefined") { %>
                    <% if (err) { %>
                        <div class="alert alert-danger alert-dismissable fade show" role="alert">
                            <strong>Error</strong>
                            <%= err %> 
                            <button type="button" class="button-close" data-bs-dismiss="alert" aria-label="close"></button>
                        </div>
                    <% } %>
                <% } %>

				<div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="text-primary mb-4">Personal Information</h3>
                                <div class="text-right">
                                    <!-- Button trigger modal -->
                                    <a href="/public-profile" class="btn btn-danger shadow btn-xs sharp mr-1 data-toggle="modal" data-target="#exampleModalCenter""><i class="fa fa-edit"></i></a>
                                </div>
                                
                                <!-- Modal -->
                                <div class="modal fade" id="exampleModalCenter">
                                    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Edit Profile</h5>
                                                <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                                                </button>
                                            </div>
                                            <form action="/public-profile" method="post" class="form-group" enctype="multipart/form-data">
                                                <div class="modal-body">
                                                    <div class="form-row">
                                                        <div class="alert alert-danger alert-dismissable fade show" role="alert">
                                                            <h3>This form you fill will be used as your public profile, delete filled field if you don't want to include it</h3>
                                                        </div>
                                                        
                                                        <div class="form-group">
                                                            <input type="file" name="file" id="" class="form-control mb-3" placeholder="Profile Pic" class="mb-3 btn btn-outline-primary btn form-control-file">
                                                        </div>
                                                        
                                                        <div class="form-group col-md-6">
                                                            <label for="fName">First Name</label>
                                                            <input type="text" name="fName" id="fName" value="<%= doc.fName %> ">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label for="fName">Last Name</label>
                                                            <input type="text" name="lName"  id="" class="form-control mb-3" placeholder="Last Name" value="<%= doc.lName %> ">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label for="startDate">Phone Number</label>
                                                            <input type="number" name="phoneNumber"  id="" class="form-control mb-3" placeholder="Phone Number" value="<%= doc.phoneNumber %> ">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label for="endDate">Email</label>
                                                            <input type="email" name="email" id="" class="form-control mb-3" placeholder="Email" value="<%= doc.email %> ">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label class="mb-1 text-white"><strong>Country</strong></label>
                                                            <input type="text" class="form-control" name="country" placeholder="Country" value="<%= doc.country %> ">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label class="mb-1 text-white"><strong>Affiliate Institution</strong></label>
                                                            <input type="text" class="form-control" name="institution" placeholder="Affiliate Institution" value="<%= doc.institution %> ">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label class="mb-1 text-white"><strong>Department</strong></label>
                                                            <input type="text" class="form-control" name="department" placeholder="Department" value="<%= doc.department %> ">
                                                        </div>
                                                    </div>
                                                        
                                                    
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-danger light" data-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <% if (doc) { %>
                                    <div class="profile-personal-info">
                                        <% if (pic) { %>
                                            <div class="row mb-2">
                                                <div class="col-sm-3 col-5">
                                                    <h5 class="f-w-500">Profile Picture <span class="pull-right">:</span>
                                                    </h5>
                                                </div>
                                                <div class="col-sm-9 col-7">
                                                    <span><img src="/public/uploads/papers/<%= pic.fileName %> " alt="Profile Picture" class="rounded-circle user_img">/span>
                                                </div>
                                            </div>
                                        <% } %>
                                        
                                        <div class="row mb-2">
                                            <div class="col-sm-3 col-5">
                                                <h5 class="f-w-500">First Name <span class="pull-right">:</span>
                                                </h5>
                                            </div>
                                            <div class="col-sm-9 col-7"><span><%= doc.fName %></span>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-sm-3 col-5">
                                                <h5 class="f-w-500">Last Name <span class="pull-right">:</span>
                                                </h5>
                                            </div>
                                            <div class="col-sm-9 col-7"><span><%= doc.lName %></span>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-sm-3 col-5">
                                                <h5 class="f-w-500">Email <span class="pull-right">:</span>
                                                </h5>
                                            </div>
                                            <div class="col-sm-9 col-7"><span><%= doc.email %></span>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-sm-3 col-5">
                                                <h5 class="f-w-500">Phone Number <span class="pull-right">:</span></h5>
                                            </div>
                                            <div class="col-sm-9 col-7"><span><%= doc.phoneNumber %></span>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-sm-3 col-5">
                                                <h5 class="f-w-500">Country <span class="pull-right">:</span>
                                                </h5>
                                            </div>
                                            <div class="col-sm-9 col-7"><span><%= doc.country %></span>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-sm-3 col-5">
                                                <h5 class="f-w-500">Institution <span class="pull-right">:</span></h5>
                                            </div>
                                            <div class="col-sm-9 col-7">
                                                <span><%= doc.institution %></span>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-sm-3 col-5">
                                                <h5 class="f-w-500">Department <span class="pull-right">:</span></h5>
                                            </div>
                                            <div class="col-sm-9 col-7"><span><%= doc.department %></span>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-sm-3 col-5">
                                                <h5 class="f-w-500">Category <span class="pull-right">:</span></h5>
                                            </div>
                                            <div class="col-sm-9 col-7"><span><%= doc.category %></span>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-sm-3 col-5">
                                                <h5 class="f-w-500">Code <span class="pull-right">:</span></h5>
                                            </div>
                                            <div class="col-sm-9 col-7">
                                                <img src=<%= doc.qrcode %> alt="QR Code">
                                            </div>
                                        </div>
                                    </div>
                                    
                                <% }else{%>
                                    <p>No profile yet, register to create one</p>
                                <%}%>
                                
                                
                            </div>
                        </div>
                    </div>
                </div>
                <% if (msg != "") { %>
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header"><h3 class="text-primary mb-4">Public Profile</h3></div>
                                <div class="card-body">
                                    <form action="/public-profile" method="post">
                                        <label for="fName">First Name</label>
                                        <input type="checkbox" name="fName" id="fName" value="<%= doc.fName %> ">
                                        <label for="lName">Last Name</label>
                                        <input type="checkbox" name="lName" id="lName" value="<%= doc.lName %> ">
                                        <label for="email">Email</label>
                                        <input type="checkbox" name="email" id="email" value="<%= doc.email %> ">
                                        <label for="phoneNumber">Phone Number</label>
                                        <input type="checkbox" name="phoneNumber" id="phoneNumber" value="<%= doc.phoneNumber %> ">
                                        <label for="country">Country</label>
                                        <input type="checkbox" name="country" id="country" value="<%= doc.country %> ">
                                        <label for="institution"Institution></label>
                                        <input type="checkbox" name="institution" id="institution" value="<%= doc.institution %> ">
                                        <label for="category">Category</label>
                                        <input type="checkbox" name="category" id="category" value="<%= doc.category %> ">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
                
            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->



    <%- include('../partial/footer') %>

    





</body>

</html>
