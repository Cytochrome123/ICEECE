<%- include('../partial/head') %>
    <%- include('../partial/sidebar') %>
		
		<!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <!-- row -->
			<div class="container-fluid">
				<div class="page-titles">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
						<li class="breadcrumb-item active"><a href="javascript:void(0)">Payment</a></li>
					</ol>
				</div>
                <div class="row">
					<div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Payments</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-responsive-md">
                                        <thead>
                                            <tr>
                                                <th>S/N</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Category</th>
                                                <th>Mode of Payment</th>
                                                <th>RRR</th>
                                                <th>Amount</th>
                                                <th>Status</th>
                                                <th>Edit</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(let pay of payment){ %> 
                                                <tr>
                                                    <% let arr = Object.values(payment)%>
                                                    <td><strong><%=arr.indexOf(pay) + 1 %></strong></td>
                                                    <td><%= pay.fName %> </td>
                                                    <td><%= pay.email %> </td>
                                                    <td><%= User.category %> </td>
                                                    <td><%= pay.mode %> </td>
                                                    <td><%= pay.rrr %> </td>
                                                    <td><%= pay.amount %> </td>
                                                    <td><%= pay.status %> </td>
                                                    <td><a href="#" class="btn btn-primary shadow btn-xs sharp mr-1 card-text d-inline" data-toggle="modal" data-target="#exampleModalCenter"><i class="fa fa-edit"></i></a></td>
                                                    <div class="modal fade" id="exampleModalCenter">
                                                        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Edit Payment</h5>
                                                                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                                                                    </button>
                                                                </div>
                                                                <form action="/admin/approve-payment/<%= pay._id %> " method="post" class="form-group" enctype="multipart/form-data">
                                                                    <div class="modal-body">
                                                                        <div class="form-row">
                                                                            <div class="form-group">
                                                                                <input type="text" name="rrr"  id="" class="form-control mb-3" placeholder="Session Name" value="<%= pay.rrr %> " disabled>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <label for="status"></label>
                                                                                <select name="status" id="status" class="form-control mb-3">
                                                                                    <option value="Not Paid" name="status">Not Paid</option>
                                                                                    <option value="Approved" name="status">Not Approved</option>
                                                                                    <option value="Approved" name="status">Approved</option>
                                                                                </select>
                                                                            </div>
                                                                        </div>
                                                                            
                                                                        
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-danger light" data-dismiss="modal">Close</button>
                                                                        <button type="submit" class="btn btn-primary">Add</button>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </tr> 
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
					
				</div>
            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->


    <%- include('../partial/footer') %>
	
</body>
</html>

