<%- include('../partial/head') %>
    <%- include('../partial/sidebar') %>

        <!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">
            <div class="container-fluid">
                <div class="page-titles">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="javascript:void(0)">Bootstrap</a></li>
						<li class="breadcrumb-item active"><a href="javascript:void(0)">Card</a></li>
					</ol>
                </div>
                <div>
                    <form action="/mark-attendance" method="post">
                        <div>
                            <label for="session">Ongoing Sessions</label>
                            <select name="session" id="session" class="form-control mb-3">
                                <% for( let session of sessions) { %>
                                    <option value="<%= session.name %> "><%= session.name %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                <div style="width:500px;" id="reader"></div>
                                
                                <div class="col" style="padding:30px;"></div>
                                
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <h4>SCAN RESULT</h4>
                                <div id="result">Result Here</div>
                                <div><%=  %> </div>
                            </div>
                        </div>
                        <hr>
                        <div class="text-center"><h1>Alternative</h1></div>
                        <div>
                            <input type="text" name="name" id="" class="form-control mb-3" placeholder="First Name">
                            <input type="text" name="email" id="email" class="form-control mb-3" placeholder="Email">
                            <select name="role" id="role" class="form-control mb-3">
                                <option name="" id="">Role</option>
                                <option value="Speaker">Speaker</option>
                                <option value="Program Manager">Program Manager</option>
                                <option value="Protocol Officer">Protocol Officer</option>
                            </select>
                        </div>
                    </form>
                   
                </div>
                
                
                



            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->



    <%- include('../partial/footer') %>





</body>

</html>