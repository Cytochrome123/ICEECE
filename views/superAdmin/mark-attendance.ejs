<%- include('../partial/head') %>
    <%- include('../partial/sidebar') %>

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <div class="container-fluid">
                <div class="page-titles">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="javascript:void(0)">Bootstrap</a></li>
						<li class="breadcrumb-item active"><a href="javascript:void(0)">Attendance</a></li>
					</ol>
                </div>
                <div class="custom-tab-1">
                    <ul class="nav nav-pills mb-4 light">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#mark"><i
                                    class="flaticon-381-notepad mr-2"></i> Mark</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#material"><i class="fa fa-arrow"></i>
                                Material</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="mark" role="tabpanel">
                            <div class="card">
                                <div class="card-header">
                                    <h1 class="card-title">Attendance</h1>
                                </div>
                                <div class="card-body">
                                    <form action="/mark-attendance" method="post">
                                        <div class="form-row">
                                            <div class="form-group col-6">
                                                <label for="session">Ongoing Sessions</label>
                                                <select name="session" id="session" class="form-control mb-3">
                                                    <% for( let session of sessions) { %>
                                                        <option value="<%= session.name %> "><%= session.name %></option>
                                                    <% } %>
                                                </select>
                                            </div>
                                            <div class="form-group col-6">
                                                <label for="rec">Query</label>
                                                <select name="rec" id="rec" class="form-control mb-3">
                                                    <option value="Not Allowed">Not Allowed</option>
                                                    <option value="Allowed">Allowed</option>
                                                </select>
                                            </div>
                                            
                                        
                                        
                                            <div class="form-group col-lg-6 col-md-12">
                                                <div class="col-lg-6 col-md-12">
                                                    <div class="text-center"><h3>Scanner</h3></div>
                                                    <div style="width:500px;" id="reader"></div>
                                                    
                                                    <div class="col" style="padding:30px;"></div>
                                                    
                                                </div>
                                                <div class="col-lg-6 col-md-12">
                                                    <h4>SCAN RESULT</h4>
                                                    <div id="result">Result Here</div>
                                                </div>
                                            </div>
                                            <hr>
                                            <div class="form-group col-lg-6 col-md-12">
                                                <div class="text-center"><h3>Alternative</h3></div>
                                                <input type="text" name="fName" id="" class="form-control mb-3" placeholder="First Name">
                                                <input type="text" name="email" id="email" class="form-control mb-3" placeholder="Email">
                                                <select name="role" id="role" class="form-control mb-3">
                                                    <option name="role" id="">Role</option>
                                                    <option value="Participant">Participant</option>
                                                    <option value="Speaker">Speaker</option>
                                                    <option value="Presenter">Presenter</option>
                                                </select>
                                                <div class="text-right mt-5">
                                                    <button type="submit" class="btn btn-primary">Confirm</button>
                                                </div>
                                            </div>
                                            
                                        </div>
                                        
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="material">
                            <div class="card">
                                <div class="card-header">
                                    <div class="mr-auto pr-3">
                                        <h4 class="text-black font-w600 fs-20">Materials</h4>
                                    </div>
                                </div>
                                <div class="card-body d-flex justify-content-around flex-wrap">
                                    


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                
                



            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->



    <%- include('../partial/footer') %>





</body>

</html>