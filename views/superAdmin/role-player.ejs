<%- include('../partial/head') -%>

    <%- include('../partial/sidebar') -%>

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <!-- row -->
            <div class="container-fluid">
                <div class="page-titles">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active"><a href="/admin/role-player">Role Player</a></li>
                    </ol>

                    <h5><a href="#" data-toggle="modal" data-target="#createRp" class="btn btn-primary mt-5"><i
                                class="fa fa-pencil"></i> Add Role
                            Player</a></h5>
                </div>




                <div class="row">
                    <div class="col-lg-12">
                        <div class="modal fade" id="createRp">
                            <div class="modal-dialog modal-dialog-centered" role="document">

                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">
                                            Create Role Player
                                        </h5>
                                        <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                                        </button>
                                    </div>

                                    <div class="modal-body">
                                        <%- include('../partial/addRpForm') -%>
                                    </div>

                                </div>

                            </div>

                        </div>
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Role players</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-responsive-md">
                                        <thead>
                                            <tr>
                                                <th class="width50">
                                                    <div class="custom-control custom-checkbox checkbox-success check-lg mr-3">
                                                        <input type="checkbox" class="custom-control-input" id="checkAll" required="">
                                                        <label class="custom-control-label" for="checkAll"></label>
                                                    </div>
                                                </th>
                                                <th>S/N</th>
                                                <th>First Name</th>
                                                <th>Last Name</th>
                                                <th>Role</th>
                                                <th>Email</th>
                                                <th>Phone Number</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <% if (rp) { %>
                                            <tbody>
                                                <% for (let r of rp){%>
                                                    <tr>
                                                        <td>
                                                            <div class="custom-control custom-checkbox checkbox-success check-lg mr-3">
                                                                <input type="checkbox" class="custom-control-input" id="customCheckBox3" required="">
                                                                <label class="custom-control-label" for="customCheckBox3"></label>
                                                            </div>
                                                        </td>
                                                        <td><strong>.</strong></td>
                                                        <td>
                                                            <%= r.fName %>
                                                        </td>
                                                        <td>
                                                            <%= r.lName %>
                                                        </td>
                                                        <td>
                                                            <%= r.role %>
                                                        </td>
                                                        <td>
                                                            <%= r.email %>
                                                        </td>
                                                        <td>
                                                            <%= r.email %>
                                                        </td>
                                                        <td>
                                                            <%= r.status %>
                                                        </td>
                                                        <td>
                                                            <div class="d-flex">
                                                                <a href="#" class="btn btn-primary shadow btn-xs sharp mr-1" data-toggle="modal" data-target="#edit<%=r._id%>"><i
                                                                        class="fa fa-pencil"></i></a>
                                                                <a href="#" class="btn btn-danger shadow btn-xs sharp"><i
                                                                        class="fa fa-trash"></i></a>
                                                                <!-- Button trigger modal -->


                                                                <div class="modal fade" id="edit<%=r._id%>">
                                                                    <div class="modal-dialog modal-dialog-centered" role="document">

                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <h5 class="modal-title">
                                                                                    <%=r.fName%>
                                                                                </h5>
                                                                                <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                                                                                </button>
                                                                            </div>

                                                                            <div class="modal-body">
                                                                                <form action="/admin/assign/<%=r._id%>" method="post" class="form-group">

                                                                                    <form action="/admin/create" method="post">

                                                                                        <input type="text" name="fName" class="form-control mb-3" placeholder="First Name" value="<%= r.fName %>">
                                                                                        <input type="text" name="lName" class="form-control mb-3" value="<%= r.lName %>" placeholder="Last Name">
                                                                                        <input type="text" name="email" class="form-control mb-3" value="<%= r.email %>" placeholder="Email">
                                                                                        <input type="pNumber" name="pNumber" class="form-control mb-3" value="<%= r.pNumber %>" placeholder="Phone Number">
                                                                                        <!-- <input type="password" name="Password" id="" placeholder="Password"> -->
                                                                                        <label for="role">Role </label>
                                                                                        <select name="role" id="role" class="form-control mb-3" value="<%= r.role %>">
                                                                                            <option value=""></option>
                                                                                            <option value="Super Admin" <%if(r.role === "Super Admin"){%>
                                                                                                selected
                                                                                                <%} %>>
                                                                                                Super Admin</option>
                                                                                            <option
                                                                                                value="Program Manager" <%if(r.role === "Program Manager"){%>
                                                                                                    selected
                                                                                                    <%} %>>
                                                                                                Program Manager</option>
                                                                                            <option value="Speaker" <%if(r.role === "Speaker"){%>
                                                                                                selected
                                                                                                <%} %>>
                                                                                                Speaker</option>
                                                                                            <option value="Reviewer" <%if(r.role === "Reviewer"){%>
                                                                                                selected
                                                                                                <%} %>>
                                                                                                Reviewer</option>
                                                                                            <option value="Presenter" <%if(r.role === "Presenter"){%>
                                                                                                selected
                                                                                                <%} %>>
                                                                                                Presenter</option>
                                                                                            <option
                                                                                                value="Protocol Officer" <%if(r.role === "Protocol Officer"){%>
                                                                                                    selected
                                                                                                    <%} %>>
                                                                                                Protocol Officer
                                                                                            </option>
                                                                                            <option
                                                                                                value="Sales-Manager" <%if(r.role === "Sales-Manager"){%>
                                                                                                    selected
                                                                                                    <%} %>>
                                                                                                Sales-Manager</option>
                                                                                        </select>


                                                                                        <div class="text-left">
                                                                                            <button type="submit" class="btn btn-danger light" data-dismiss="modal">Close</button>
                                                                                            <button type="button" class="btn btn-primary">Save
                                                                                                changes</button>
                                                                                        </div>
                                                                                    </form>
                                                                            </div>

                                                                        </div>

                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    <% }%>
                                            </tbody>
                                            <% } %>

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->
        <%- include('../partial/footer') -%>