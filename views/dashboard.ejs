<%- include('partial/head') -%>


    <%- include('partial/sidebar') -%>

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <div class="container-fluid">
                <div class="page-titles">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                    </ol>
                </div>

                <!-- Upcoming sessions -->

                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Upcoming Sessions</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover table-responsive-sm">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Date</th>
                                            <th>Time</th>
                                            <th>Reg Participants</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th>1</th>
                                            <td><a href="/profile">Kolor Tea Shirt For Man</a></td>
                                            <td><span class="badge badge-primary">Sale</span>
                                            </td>
                                            <td>January 22</td>
                                        </tr>
                                        <tr>
                                            <th>2</th>
                                            <td>Kolor Tea Shirt For Women</td>
                                            <td><span class="badge badge-success light">Tax</span>
                                            </td>
                                            <td>January 30</td>
                                        </tr>
                                        <tr>
                                            <th>3</th>
                                            <td>Blue Backpack For Baby</td>
                                            <td><span class="badge badge-danger">Extended</span>
                                            </td>
                                            <td>January 25</td>
                                        </tr>


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!--- * // end of upcoming
                 sessions --->


                <div class="row">
                    <% if (User.role=="Super Admin" ) { %>
                        <div class="col-6">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Payments</h4>
                                    <div>
                                        <p>
                                            <%= payment.length %>
                                        </p>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-responsive-md">
                                            <thead>
                                                <tr>
                                                    <th>S/N</th>
                                                    <th>Name</th>
                                                    <th>Email</th>
                                                    <th>Mode of Payment</th>
                                                    <th>Amount</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for(let pay of payment){ %>
                                                    <tr>
                                                        <% let arr=Object.values(payment)%>
                                                            <td><strong>
                                                                    <%=arr.indexOf(pay) + 1 %>
                                                                </strong></td>
                                                            <td>
                                                                <%= pay.fName %>
                                                            </td>
                                                            <td>
                                                                <%= pay.email %>
                                                            </td>
                                                            <td>
                                                                <%= pay.mode %>
                                                            </td>
                                                            <td>
                                                                <%= pay.amount %>
                                                            </td>
                                                            <td>
                                                                <%= pay.status %>
                                                            </td>
                                                    </tr>
                                                    <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>


                        <div class="col-12">
                            <div class="card">
                                <div class="row">
                                    <% for(let sesn of session){%>
                                        <div class="col-lg-3 col-md-6 col-sm-12">
                                            <div class="card">
                                                <img class="card-img-top img-fluid" src="/public/assets/images/dashboard.jpeg" alt="Session image">
                                                <div class="card-header border-0">
                                                    <div class="mr-auto pr-3">
                                                        <h3 class="card-title">
                                                            <%= sesn.name %>
                                                        </h3>
                                                        <i class="fa fa-circle text-success text-right mr-1"></i> Ongoing
                                                    </div>
                                                </div>
                                                <div class="card-body">
                                                    <div class="media mb-3">
                                                        <div href="#">
                                                            <img src="/public/assets/images/menus/8.png" alt="" class="rounded-circle mr-3" width="86">
                                                        </div>
                                                        <div class="media-body">
                                                            <h6 class="fs-16 font-w500"><span href="#" class="text-black">
                                                                    <%= sesn.topic %>
                                                                </span></h6>
                                                            <span class="fs-14">by DR</span>
                                                        </div>
                                                    </div>
                                                    <ul class="m-md-auto mt-2 pr-4">
                                                        <li class="mb-2 text-nowrap"><i class="las la-clock scale5 mr-3"></i><span class="fs-14 text-black text-nowrap font-w500">
                                                                <%= sesn.startTime %>- <%= sesn.endTime %>
                                                            </span></li>
                                                        <li class="mb-2 text-nowrap"><i class="las la-clock scale5 mr-3"></i><span class="fs-14 text-black text-nowrap font-w500">
                                                                <%= sesn.duration %>
                                                            </span></li>
                                                        <li class="mb-2 text-nowrap"><i class="las la-calendar-alt scale5 mr-3"></i><span class="fs-14 text-black  font-w500">
                                                                <%= sesn.startDate%>- <%= sesn.endDate %>
                                                            </span></li>
                                                    </ul>
                                                </div>
                                                <div class="card-footer">
                                                    <div class="text-right">
                                                        <a href="/session/<%= sesn._id %> " class="btn-outline-primary">More</a>
                                                    </div>

                                                </div>
                                            </div>

                                        </div>
                                        <% } %>
                                </div>



                            </div>
                        </div>

                        <% }else{ %>
                            <div class="col-xl-12">
                                <img src="/public/assets/images/dashboard.jpeg" alt="" style="width: 100%; height: 100%;">
                            </div>
                            <%}%>
                </div>
            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->

        <%- include('partial/footer') -%>